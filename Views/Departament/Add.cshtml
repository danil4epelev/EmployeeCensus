@model Departament

@{
    ViewData["Title"] = "Добавление отдела";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form asp-action="Create" asp-controller="Departament" method="post">
    <div>
        <div class="form-group">
            <label asp-for="@Model.DepartamentName">Наименование отдела</label>
            <input asp-for="@Model.DepartamentName" class="form-control  form-control-lg" required />
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

